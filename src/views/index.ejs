<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= name %></title>
  <link rel="stylesheet" href="/public/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/public/styles/bootstrap-icons.min.css" />
</head>
<body>
  <script>
    async function printTransaction() {
      const res = await fetch("/print")
      const textarea = document.getElementById("appLog")
      textarea.value = (await res.json()).res.join("\n")
    }
  </script>
  <div class="container text-center p-3">
    <button type="button" class="btn btn-primary w-100" onclick="printTransaction()">
      <i class="bi bi-printer mb-3" style="font-size:5rem"></i>
      <p>印刷</p>
    </button>
    <div class="form-floating mt-3">
      <textarea class="form-control" placeholder="Log" id="appLog" readonly rows="6" style="height:16rem"></textarea>
      <label for="appLog">Log</label>
    </div>
  </div>
</body>
</html>
